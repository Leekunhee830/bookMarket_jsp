<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd" id="WebApp_ID" version="4.0">
  <display-name>bookMarket</display-name>
  <welcome-file-list>
    <welcome-file>index.html</welcome-file>
    <welcome-file>index.htm</welcome-file>
    <welcome-file>index.jsp</welcome-file>
    <welcome-file>default.html</welcome-file>
    <welcome-file>default.htm</welcome-file>
    <welcome-file>default.jsp</welcome-file>
  </welcome-file-list>
  
  <servlet>
  	<servlet-name>member</servlet-name>
  	<servlet-class>com.bookmarket.controller.MemberController</servlet-class>
  </servlet>
  
  <servlet>
  	<servlet-name>product</servlet-name>
  	<servlet-class>com.bookmarket.controller.ProductController</servlet-class>
  </servlet>
  
  <servlet>
  	<servlet-name>cart</servlet-name>
  	<servlet-class>com.bookmarket.controller.CartController</servlet-class>
  </servlet>
  
  <servlet>
  	<servlet-name>review</servlet-name>
  	<servlet-class>com.bookmarket.controller.ReviewController</servlet-class>
  </servlet>
  
  <servlet>
  	<servlet-name>qna</servlet-name>
  	<servlet-class>com.bookmarket.controller.QnaController</servlet-class>
  </servlet>
  
  <servlet>
  	<servlet-name>kakao</servlet-name>
  	<servlet-class>com.bookmarket.controller.KakaoController</servlet-class>
  </servlet>
  
  <servlet-mapping>
  	<servlet-name>member</servlet-name>
  	<url-pattern>*.do</url-pattern>
  </servlet-mapping>
  
  <servlet-mapping>
  	<servlet-name>product</servlet-name>
  	<url-pattern>*.pd</url-pattern>
  </servlet-mapping>
  
  <servlet-mapping>
  	<servlet-name>cart</servlet-name>
  	<url-pattern>*.ct</url-pattern>
  </servlet-mapping>
  
  <servlet-mapping>
  	<servlet-name>review</servlet-name>
  	<url-pattern>*.rv</url-pattern>
  </servlet-mapping>
  
  <servlet-mapping>
  	<servlet-name>qna</servlet-name>
  	<url-pattern>*.qna</url-pattern>
  </servlet-mapping>
  
  <servlet-mapping>
  	<servlet-name>kakao</servlet-name>
  	<url-pattern>*.ka</url-pattern>
  </servlet-mapping>
</web-app>